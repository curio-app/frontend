{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "linebreak-style": "off",
    "no-console": "off",
    "react/jsx-props-no-spreading": "off",
    "arrow-parens": "off",
    "arrow-body-style": "off",
    "comma-dangle": "off",
    "operator-linebreak": "off",
    "object-curly-newline": "off"
  }
}
